<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppBaseTheme" parent="android:Theme.Holo.Light.DarkActionBar" />

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <item name="TagStyle">@style/tag</item>
        <item name="HeaderStyle">@style/header</item>
    </style>

    <style name="tag">
        <item name="android:background">@color/creamsicle</item>
        <item name="tag_view_tag_drawable">@drawable/tag</item>
        <item name="tag_view_tag_margin">3dp</item>
        <item name="tag_view_tag_padding_horizontal">7dp</item>
        <item name="tag_view_tag_padding_vertical">1dp</item>
        <item name="tag_view_text_style">bold</item>
        <item name="tag_view_text_color">?android:attr/textColorPrimary</item>
        <item name="tag_view_text_size">24sp</item>
    </style>

    <style name="header">
        <item name="android:textSize">36sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

</resources>