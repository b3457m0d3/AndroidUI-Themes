<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tag="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".TagViewActivity">

    <TextView
        android:textSize="36sp"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@drawable/tag_white"
        android:text="@string/header"/>

    <com.twitter.university.android.tagview.widget.TagView
        android:id="@+id/tags"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/creamsicle"
        tag:tag_view_tag_padding_horizontal="1dp"
        tag:tag_view_tag_padding_vertical="7dp"
        tag:tag_view_text_size="32sp"
        tag:tag_view_text_color="@color/blue_grey"
        tag:tag_view_tag_drawable="@drawable/tag"/>

</LinearLayout>